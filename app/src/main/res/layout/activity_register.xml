<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Activities.Register_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello!\nSignUp to\nget started"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:id="@+id/wel"
        tools:ignore="HardcodedText" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        android:layout_below="@id/wel"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/person"/>

        <EditText
            android:id="@+id/userFullName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/edittext_shape"
            android:layout_marginEnd="50dp"
            android:hint="Full name"
            android:drawableStart="@drawable/edit"
            android:textSize="25sp"
            android:inputType="textPassword"
            android:autofillHints="no"
            android:paddingStart="20dp"
            android:drawablePadding="10dp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <EditText
            android:id="@+id/uname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15sp"
            android:background="@drawable/edittext_shape"
            android:layout_marginEnd="50dp"
            android:hint="Username"
            android:drawableStart="@drawable/person"
            android:textSize="25sp"
            android:inputType="text"
            android:autofillHints="no"
            android:paddingStart="20dp"
            android:drawablePadding="20dp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <EditText
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/edittext_shape"
            android:layout_marginEnd="50dp"
            android:hint="Email"
            android:drawableStart="@drawable/email"
            android:textSize="25sp"
            android:inputType="textEmailAddress"
            android:autofillHints="no"
            android:paddingStart="20dp"
            android:drawablePadding="20dp"
            tools:ignore="HardcodedText,RtlSymmetry" />
        <EditText
            android:id="@+id/createpassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/edittext_shape"
            android:layout_marginEnd="50dp"
            android:hint="Create Password"
            android:drawableStart="@drawable/password_eye"
            android:textSize="25sp"
            android:inputType="textPassword"
            android:autofillHints="no"
            android:paddingStart="20dp"
            android:drawablePadding="10dp"
            tools:ignore="HardcodedText,RtlSymmetry" />
        <EditText
            android:id="@+id/confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/edittext_shape"
            android:layout_marginEnd="50dp"
            android:hint="Confirm Password"
            android:drawableStart="@drawable/password_eye"
            android:textSize="25sp"
            android:inputType="textPassword"
            android:autofillHints="no"
            android:paddingStart="20dp"
            android:drawablePadding="10dp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="20sp"
                android:id="@+id/maleCheckbox"
                tools:ignore="HardcodedText" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:layout_marginStart="30sp"
                android:textSize="20sp"
                android:id="@+id/feMaleCheckbox"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@id/linear1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25sp"
        android:id="@+id/btn3"
        android:background="@drawable/button_shape"
        tools:ignore="HardcodedText" />


</RelativeLayout>