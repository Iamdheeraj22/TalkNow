<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ForgetPassword_Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/resetLinear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email below \n to reset password"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <EditText
        android:id="@+id/forget_email"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:drawableStart="@drawable/email"
        android:drawablePadding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/resetLinear"
        android:paddingStart="10dp"
        android:textSize="20sp"
        android:paddingVertical="10dp"
        android:background="@drawable/edittext_shape"
        android:hint="Email"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        tools:ignore="HardcodedText,LabelFor" />

    <Button
        android:id="@+id/forget_submit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/button_shape"
        android:text="   Reset Password   "
        android:textSize="20dp"
        android:paddingVertical="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/forget_email"
        android:layout_marginTop="25sp"
        tools:ignore="HardcodedText" />

</RelativeLayout>